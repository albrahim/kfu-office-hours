<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Officehoursclient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/kfu_primary</item>
        <item name="colorPrimaryVariant">@color/kfu_primary2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kfu_secondary</item>
        <item name="colorSecondaryVariant">@color/kfu_secondary2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/tajawal_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:windowBackground">@color/kfu_blank</item>
    </style>

    <style name="ContainerStyle">
        <item name="android:background">@drawable/container_border</item>
        <item name="android:paddingVertical">30dp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:layout_marginVertical">60dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
    </style>

    <style name="DoctorListContainerStyle" parent="ContainerStyle">
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:layout_marginVertical">0dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="InputFieldContainerStyle" parent="ContainerStyle">
        <item name="android:layout_marginVertical">30dp</item>
    </style>

    <style name="DestructiveAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/DestructiveNegativeButtonStyle</item>
    </style>

    <style name="DestructiveNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#B71C1C</item>
    </style>

</resources>